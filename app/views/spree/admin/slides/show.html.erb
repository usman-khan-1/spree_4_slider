<h1><%= t(:slide) %></h1>

<table class="table">
  <tr data-hook="name">
    <th><%= t(:name) %></th>
    <td>
      <%= @slide.name %>
    </td>
  </tr>
  <tr data-hook="link_url">
    <th><%= t(:link_url) %></th>
    <td>
      <%= @slide.link_url %>
    </td>
  </tr>
  <tr data-hook="published">
    <th><%= t(:published) %></th>
    <td>
      <%= @slide.published ? t(:y) : t(:n) %>
    </td>
  </tr>
  <tr data-hook="image_file_name">
    <th><%= t(:image_file_name) %></th>
    <td>
      <%= image_tag main_app.url_for(@slide.image), style: 'width: 120px; height: auto;' %> 
    </td>
  </tr>
  <tr data-hook="position">
    <th><%= t(:position) %></th>
    <td>
      <%= @slide.position %>
    </td>
  </tr>
</table>

<p>
  <%= link_to_edit @slide, class: 'edit_slide' %> <%= t(:or) %>
  <%= link_to t(:back), collection_url %>
</p>
